import React, { Component } from 'react';

class SubmitForm extends React.Component {
  constructor(props) {
    super(props);
  }

  handleType(event) {
    this.setState({value: event.target.value});
  }

  handlePrice(event){
    this.setState({value: event.target.value});
  }
  
  handleDistance(event){
    this.setState({value: event.target.value});
  }
  
  handleLocation(event){
    this.setState({value: event.target.value});
  }

  handleSave(event) {
    alert('Your favorite flavor is: ' + this.state.value);
    event.preventDefault();
  }

  render() {
    return (
        <div>
        <form>
        <label>
        Location:
        <input type="text" value={this.state.value} onChange={this.handleLocation} />
        </label>
        <label>
        Distance:
        <input type="text" value={this.state.value} onChange={this.handleDistance} />
        </label>
        <label>
        Price:
        <select value={this.state.value} onChange={this.handlePrice}>
        <option value="1">$</option>
        <option value="2">$$</option>
        <option value="3">$$$</option>
        <option value="4">$$$$</option>
        </select>
        </label>
        <label>
        Type:
        <select value={this.state.value} onChange={this.handleType}>
        <option value="bar">Bar</option>
        <option value="restaurant">Restaurant</option>
        <option value="cafe">Cafe</option>
        </select>
        </label>
        <button className="save" type="button" onClick=
            {this.handleSave}>Save</button>}
        </form>
        </div>
        );
  }
}
export default SubmitForm;

